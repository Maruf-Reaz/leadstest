@model EntityFramworkFirstApp.Models.ViewModels.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assign Roles</h1>

<h4>Assign Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">User Name</label>
                <select asp-for="UserName" class="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Role Name</label>
                <select asp-for="RoleName" class="form-control" asp-items="ViewBag.Roles"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
